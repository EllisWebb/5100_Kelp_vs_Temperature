import numpy as np


tks = ['IBM', 'MSFT', 'GOOG', 'AAPL', 'AMZN', 'FB']
allprices = {}
path = '/Users/carterwebb/Desktop/5700_Prog_Data/Assignment 3/data'


for tk in tks:
    tot_path = f"{path}/{tk}.csv"
    with open(tot_path, 'r') as f:
        lines = f.readlines()

    head = lines[0].strip().split(',')
    adj_index = head.index('Adj Close')

    prices = []
    for line in lines[1:]:
        parts = line.strip().split(',')
        prices.append(float(parts[adj_index]))
    allprices[tk] = prices



def correlation(x, y):
    n = len(x)
    xbar = sum(x) / n
    ybar = sum(y) / n

    numerator = sum((x[i] - xbar) * (y[i] - ybar) for i in range(n))
    denom_x = sum((x[i] - xbar) ** 2 for i in range(n))
    denom_y = sum((y[i] - ybar) ** 2 for i in range(n))

    return numerator / ((denom_x * denom_y) ** 0.5)




corrs = sorted(map(
    
        lambda pair: (pair[0], pair[1], correlation(allprices[pair[0]], allprices[pair[1]])),
        [(tks[i], tks[j]) for i, _ in enumerate(tks) for j in range(i + 1, len(tks))]),
    
    key=lambda x: x[2],
    reverse=True
)

for tk1, tk2, r in corrs:
    print(f"{tk1}:{tk2} = {r:f}")


correlation2 = lambda x, y: np.sum((x - np.sum(x)/len(x)) * (y - np.sum(y)/len(y))) / ((np.sum((x - np.sum(x)/len(x))**2) * np.sum((y - np.sum(y)/len(y))**2))**0.5)


%timeit correlation(allprices['GOOG'], allprices['MSFT'])
%timeit correlation2(allprices['GOOG'], allprices['MSFT'])



